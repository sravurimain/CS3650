public class Book {
    private String name;
    private String author;

    public Book() {
        this.name = "Unknown";
        this.author = "Unknown";
    }

    public void printDetails() {
        System.out.println("Book: " + name + ", Author: " + author);
    }

    // Optional: useful if you want to manually set book info after construction
    public void setInfo(String name, String author) {
        this.name = name;
        this.author = author;
    }
}
